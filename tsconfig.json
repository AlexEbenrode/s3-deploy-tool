{
  "compilerOptions": {
    "lib": [
      "es2017"
    ],
    "target": "es2017",
    "moduleResolution": "node",
    "allowJs": true,
    "module": "node16",
    "alwaysStrict": true,
    "checkJs": true,
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
  },
  "include": [
    "src/**/*",
    "index.ts",
    "cli.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}